<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMateri"
    android:background="@drawable/bg_menumateri">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/opensansbold"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="5sp"
                android:text="@string/panduan_praktikummenu"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/materi1"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@color/w1"
                android:text="Ruang Lingkup Biologi"
                android:fontFamily="@font/opensansbold"
                android:textSize="17sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/materi2"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="Keanekaragaman Hayati"
                android:fontFamily="@font/opensansbold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:background="@color/w2"/>
            <Button
                android:id="@+id/materi3"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="Klasifikasi Makhluk Hidup"
                android:textSize="17sp"
                android:fontFamily="@font/opensansbold"
                android:background="@color/w3"/>
            <Button
                android:id="@+id/materi4"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:text="Virus"
                android:textSize="17sp"
                android:background="@color/w4"/>
            <Button
                android:id="@+id/materi5"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:text="Ekosistem"
                android:textSize="17sp"
                android:background="@color/w5"/>
            <Button
                android:id="@+id/materi6"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:text="Perubahan Lingkungan"
                android:textSize="17sp"
                android:background="@color/w6"/>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btnhome"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnhome"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>