<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KiKd"
    android:background="@drawable/bg_kikd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">


        <ImageButton
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_home"/>

        <ScrollView
            android:layout_below="@id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"

                    android:background="@drawable/bg_hijau"
                    android:fontFamily="@font/opensansbold"
                    android:text="K1"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pudar"
                    android:fontFamily="@font/opensans"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:text="@string/k1"
                    android:justificationMode="inter_word"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_hijau"
                    android:fontFamily="@font/opensansbold"
                    android:text="K2"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pudar"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.1"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k31"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.2"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k32"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.3"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k33"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.4"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k34"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.5"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k35"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="3.6"
                            android:justificationMode="inter_word"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:text="@string/k36"
                            android:justificationMode="inter_word"
                            android:padding="5dp"/>
                    </TableRow>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>