<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_materi3"
    tools:context=".materi3.Bagian1_m3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btnhome"/>

        <LinearLayout
            android:layout_below="@+id/home"
            android:layout_above="@id/bawah"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_judul_bab3"
                android:fontFamily="@font/oldstandar"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="@string/judulbab3isi"/>
            <ScrollView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pengantarid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-10dp"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/logo1"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:text="@string/pengantar"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pengantarid"
                            android:layout_alignParentEnd="true"
                            android:background="#E7E9E6"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.zolad.zoominimageview.ZoomInImageView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="300dp"
                                android:layout_height="160dp"
                                android:scaleType="fitXY"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/gambarbab3"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:text="@string/sumber_m3"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/pengantarid"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/arimo"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:padding="10dp"
                                android:text="@string/pengantar_3"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/logo1"
                            android:layout_width="64dp"
                            android:layout_height="94dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="-18dp"
                            android:src="@drawable/icon_katapengantar" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_penegasan_bab3"
                        android:fontFamily="@font/arimo"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="5dp"
                        android:padding="5dp"
                        android:text="@string/penegasan_3"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginStart="-10dp"
                            android:id="@+id/pengantarid3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_toEndOf="@+id/icon"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:textAlignment="center"
                            android:text="@string/tujuan_praktikum"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pengantarid3"
                            android:background="@color/isi_bab3"
                            android:fontFamily="@font/arimo"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="5dp"
                            android:padding="15dp"
                            android:text="@string/tujuan_3"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dip"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/kacapembesar"
                            android:background="@drawable/oval_biru"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pengantarid2"
                            android:layout_marginStart="-10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/icon2"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:textAlignment="center"
                            android:text="@string/alat_amp_bahan"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <LinearLayout
                            android:layout_width="371dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/pengantarid2"
                            android:fontFamily="@font/arimo"
                            android:background="@color/isi_bab3"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="5dp"
                            android:padding="15dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/pengantarid"
                                android:fontFamily="@font/arimo"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:padding="5dp"
                                android:text="@string/alat_3"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dip"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/alatdanbahan"
                            android:background="@drawable/oval_biru"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/caraid"
                            android:layout_marginStart="-10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iconid"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:text="CARA KERJA"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_width="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/caraid"
                            android:fontFamily="@font/arimo"
                            android:background="@color/isi_bab3"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="5dp"
                            android:padding="15dp">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="1."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/carakerja_1_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="2."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/carakerja_2_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="3."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/carakerja_3_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="4."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/carakerja_4_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="5."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/carakerja_5_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iconid"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dip"
                            android:layout_marginStart="6dp"

                            android:layout_marginBottom="121dp"
                            android:src="@drawable/icon_carakerja"
                            android:background="@drawable/oval_biru"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pengantarid6"
                            android:layout_marginStart="-10dp"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/icon6"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:text="@string/pertanyaan"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/pengantarid6"
                            android:fontFamily="@font/arimo"
                            android:background="@color/isi_bab3"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="5dp"
                            android:padding="15dp"
                            android:text="@string/tujuan_1"
                            android:textColor="@color/black"
                            android:textSize="16sp" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/pengantarid"
                                android:fontFamily="@font/arimo"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:padding="10dp"
                                android:text="@string/pengantarpertanyaan_3"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.zolad.zoominimageview.ZoomInImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/tabel_3"/>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="1."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/pertanyaan_a_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arimo"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="2."
                                    android:justificationMode="inter_word"
                                    android:padding="2dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/pengantarid"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/arimo"
                                    android:justificationMode="inter_word"
                                    android:lineSpacingExtra="5dp"
                                    android:padding="2dp"
                                    android:text="@string/pertanyaan_b_3"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"/>
                            </TableRow>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/icon6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="5dip"
                            android:layout_marginStart="6dp"

                            android:layout_marginBottom="121dp"
                            android:src="@drawable/icon_pertanyaan"
                            android:background="@drawable/oval_biru"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/pengantarid9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-10dp"
                            android:layout_toEndOf="@+id/icon9"
                            android:background="@drawable/bg_bab3"
                            android:fontFamily="@font/cabin"
                            android:letterSpacing="0.1"
                            android:padding="10dip"
                            android:text="@string/tugas_"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/abu"
                            android:layout_below="@+id/pengantarid9">
                            <TextView
                                android:id="@+id/isitugas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arimo"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="5dp"
                                android:padding="15dp"
                                android:text="@string/tugas_3"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <ImageView
                            android:id="@+id/icon9"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/oval_biru"
                            android:padding="5dip"
                            android:src="@drawable/icon_tugas" />


                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/bawah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="textEnd"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"

                android:textColor="@color/black"
                android:fontFamily="@font/opensans"
                android:textSize="12sp"
                android:text="@string/mediaiteratif"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>